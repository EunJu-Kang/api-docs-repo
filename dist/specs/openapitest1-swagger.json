{
  "openapi": "3.1.0",
  "info": {
    "title": "주문 관리 API",
    "description": "주문(Order) CRUD REST API 문서",
    "contact": {
      "name": "API Support",
      "email": "support@example.com"
    },
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8081",
      "description": "Generated server url"
    }
  ],
  "tags": [
    {
      "name": "Order",
      "description": "주문 관리 API"
    }
  ],
  "paths": {
    "/api/orders/{id}": {
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "주문 단건 조회",
        "description": "ID로 주문을 조회합니다",
        "operationId": "getOrder",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "주문 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "example": 1
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              }
            }
          },
          "404": {
            "description": "주문 없음",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Order"
        ],
        "summary": "주문 수정",
        "description": "기존 주문을 수정합니다 (부분 수정 지원)",
        "operationId": "updateOrder",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "주문 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "example": 1
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderUpdateRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "수정 성공",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              }
            }
          },
          "404": {
            "description": "주문 없음",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Order"
        ],
        "summary": "주문 삭제",
        "description": "주문을 삭제합니다",
        "operationId": "deleteOrder",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "주문 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            },
            "example": 1
          }
        ],
        "responses": {
          "204": {
            "description": "삭제 성공"
          },
          "404": {
            "description": "주문 없음"
          }
        }
      }
    },
    "/api/orders": {
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "주문 목록 조회",
        "description": "전체 주문 목록을 조회합니다",
        "operationId": "getAllOrders",
        "responses": {
          "200": {
            "description": "조회 성공",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OrderResponse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Order"
        ],
        "summary": "주문 생성",
        "description": "새로운 주문을 생성합니다",
        "operationId": "createOrder",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OrderCreateRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "주문 생성 성공",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OrderUpdateRequest": {
        "type": "object",
        "description": "주문 수정 요청 (부분 수정 지원)",
        "properties": {
          "customerName": {
            "type": "string",
            "description": "주문자명",
            "example": "김철수"
          },
          "productName": {
            "type": "string",
            "description": "상품명",
            "example": "태블릿"
          },
          "quantity": {
            "type": "integer",
            "format": "int32",
            "description": "수량",
            "example": 3,
            "minimum": 1
          },
          "price": {
            "type": "number",
            "description": "가격",
            "example": 800000,
            "minimum": 0
          },
          "status": {
            "type": "string",
            "description": "주문 상태",
            "enum": [
              "PENDING",
              "CONFIRMED",
              "SHIPPED",
              "DELIVERED",
              "CANCELLED"
            ],
            "example": "CONFIRMED"
          }
        }
      },
      "OrderResponse": {
        "type": "object",
        "description": "주문 응답",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "주문 ID",
            "example": 1
          },
          "orderNumber": {
            "type": "string",
            "description": "주문번호",
            "example": "ORD-20260210-00001"
          },
          "customerName": {
            "type": "string",
            "description": "주문자명",
            "example": "홍길동"
          },
          "productName": {
            "type": "string",
            "description": "상품명",
            "example": "노트북"
          },
          "quantity": {
            "type": "integer",
            "format": "int32",
            "description": "수량",
            "example": 2
          },
          "price": {
            "type": "number",
            "description": "가격",
            "example": 1500000
          },
          "status": {
            "type": "string",
            "description": "주문 상태",
            "enum": [
              "PENDING",
              "CONFIRMED",
              "SHIPPED",
              "DELIVERED",
              "CANCELLED"
            ],
            "example": "PENDING"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "주문 생성일시"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "주문 수정일시"
          }
        }
      },
      "OrderCreateRequest": {
        "type": "object",
        "description": "주문 생성 요청",
        "properties": {
          "customerName": {
            "type": "string",
            "description": "주문자명",
            "example": "홍길동",
            "minLength": 1
          },
          "productName": {
            "type": "string",
            "description": "상품명",
            "example": "노트북",
            "minLength": 1
          },
          "quantity": {
            "type": "integer",
            "format": "int32",
            "description": "수량",
            "example": 2,
            "minimum": 1
          },
          "price": {
            "type": "number",
            "description": "가격",
            "example": 1500000,
            "minimum": 0
          }
        },
        "required": [
          "price",
          "quantity"
        ]
      }
    }
  }
}